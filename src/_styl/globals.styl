// Reset the box-sizing
*
  background-repeat: no-repeat
  box-sizing border-box
  &:before,
  &:after
    box-sizing border-box
    
::-moz-selection
  background lighten(#C2C1B9, 65%)

::selection
  background lighten(#C2C1B9, 65%)

img
  vertical-align: middle
  max-width: 100%
  height: auto
  border: 0

a
  color darken(#B5E51D, 10%)
  text-decoration none
  border-bottom 1px solid darken(#B5E51D, 0%)
  transition color 0.2s ease-in-out, border 0.2s ease-in-out
  
  &:hover
    color darken(#B5E51D, 35%)
    border-bottom 1px solid darken(#B5E51D, 25%)
  
  &.action
    border-bottom none
    
    &:after
      content '\2192\2002'
      padding-left 3px
      position relative
      top 2px
      transition padding 90ms ease-in-out
    
    &:hover:after
      padding-left 8px


html
  font-size: 20px
  
  +widerthan($bp-desk-start)
    font-size 22px 

body
  font-family: $base-font-family
  // background: darken(#F2F4F6, 5%)
  // background #4B434D
  // background: linear-gradient(50deg, rgba(55, 46, 57, 1) 0%, rgba(72, 78, 85, 1) 100%)
  background linear-gradient(-50deg, rgba(206, 205, 199, 1) 0%, rgba(176, 175, 165, 1) 100%)
  // background #9C9B8E
  // background lighten(#9C9B8E, 20%)
  color: darken(#878F9F, 30%)
  height: 100%
  width 100%
  margin: 0
  line-height: 1.3
  padding: 0.6em
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  position relative
  cursor default
  
  +widerthan($bp-tablet-start)
    padding 1em
  
  &.noscroll
    overflow hidden

.wrap
  background-color #F8F7F7
  padding 1.5em
  min-height calc(100vh - 2em)
  
  +widerthan($bp-desk-start)
    padding 3em

.contain
  max-width 1140px
  margin-left auto
  margin-right auto

contain()
  max-width 1140px
  margin-left auto
  margin-right auto

h1
  font-family $alt-font-family
  margin: 0
  display: block
  opacity 0
  transform translateY(-10px)
  animation fadein 0.6s 0.5s 1 forwards ease
  line-height 1.1
  font-size 2em
  color #4B434D
  margin-bottom 40px
  
  +widerthan($bp-tablet-start)
    font-size 3.5em

  +widerthan($bp-desk-start)
    font-size 4.2em
  
  strong
    font-weight 800
    color lighten(#4B434D, 12%)

    
.intro
  opacity 0
  transform translateY(-10px)
  animation fadein 0.6s 0.5s 1 forwards ease
  font-size 1em
  text-align center
  
  +widerthan($bp-tablet-start)
    margin-bottom 2em
    font-size 1.1em
  
  +widerthan($bp-desk-start)
    margin-bottom 6em

.intro,
.hero
  text-align left
  
  +widerthan($bp-tablet-start)
    // text-align center

h3
  font-weight: 400
  font-size: 1em
  line-height: 1
  display: block

h4
  font-family $alt-font-family
  font-size 1.8em
  margin-top 0

button
  display inline-block
  background none
  border none
  outline none

.img-band
  padding 1.5em 0
  
  +widerthan($bp-desk-start)
    padding 4em 0
  
  img
    display block
    margin auto
  
  &--grey
    background-color darken(#F8F7F7, 5%)
  
  &--dark
    background-color #22272D
    
  &--blue
    background url('/images/blue-bg.jpg')
    background-size cover

.container
  margin auto
  max-width 800px
  
  &--large
    max-width 1250px
