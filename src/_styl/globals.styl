.preload *
  -webkit-transition none !important
  -moz-transition none !important
  -ms-transition none !important
  -o-transition none !important
  transition none !important
  -webkit-animation none !important
  -moz-animation none !important
  -ms-animation none !important
  -o-animation none !important
  animation none !important

// Reset the box-sizing
*
  background-repeat: no-repeat
  box-sizing border-box
  &:before,
  &:after
    box-sizing border-box
    
::-moz-selection
  background lighten(#C2C1B9, 65%)

::selection
  background lighten(#C2C1B9, 65%)

img
  vertical-align: middle
  max-width: 100%
  height: auto
  border: 0

a
  // color darken(#B5E51D, 10%)
  color #292929
  opacity 0.5
  text-decoration none
  transition opacity 250ms ease-in-out
  padding-bottom 1px
  position relative
  
  &:hover
    opacity 1
    
  &.action
    border-bottom none
    
    &:after
      content '\2192\2002'
      padding-left 3px
      position relative
      top 2px
      transition padding 90ms ease-in-out
    
    &:hover:after
      padding-left 8px

.main
  a
    &:before
      content ''
      width 100%
      height 2px
      position absolute
      bottom -2px
      opacity 0.25
      left 0
      background-image linear-gradient(to bottom, rgba(41,41,41,0) 50%, #292929 50%)
      background-repeat repeat-x
      background-size 2px 2px
      background-position 0 0
    &:after
      content ' â†’'
      transition margin-left 125ms ease-in-out
    
    &:hover
      &:after
        margin-left 5px
    

hr
  display block
  width 40%
  background #73737c
  opacity 0.2
  margin 2em 0
  padding 0
  position relative
  left -10%


html
  font-size: 18px
  
  +widerthan($bp-desk-start)
    font-size 18px 

body
  font-family: $base-font-family
  border-top 20px solid #323232
  color #777
  height: 100%
  width 100%
  margin: 0
  line-height: 1.5
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  position relative
  cursor default
  
  +widerthan($bp-tablet-start)
    // padding 1em
  
  &.noscroll
    overflow hidden

.wrap
  // background-color #F8F7F7
  padding 1.5em
  min-height calc(100vh - 3em)
  
  +widerthan($bp-desk-start)
    padding 3em

.contain
  width 90%
  max-width 1080px
  margin-left auto
  margin-right auto

contain()
  max-width 1140px
  margin-left auto
  margin-right auto

h1
  font-family $base-font-family
  margin: 0
  display: block
  opacity 0
  transform translateY(-10px)
  animation fadein 0.6s 0.5s 1 forwards ease
  line-height 1.1
  font-size 2em
  color #4B434D
  margin-bottom 40px
  
  +widerthan($bp-tablet-start)
    font-size 3.5em

  +widerthan($bp-desk-start)
    font-size 4.2em
  
  strong
    font-weight 800
    color lighten(#4B434D, 12%)

    
.intro
  opacity 0
  animation fadeInUp 0.6s 0.6s 1 forwards ease
  font-size 1em
  text-align center
  
  +widerthan($bp-tablet-start)
    // margin-bottom 2em
    font-size 1.1em
  
  +widerthan($bp-desk-start)
    // margin-bottom 6em

.intro,
.hero
  text-align left
  
  +widerthan($bp-tablet-start)
    // text-align center

.more-info
  opacity 0
  animation fadeInUp 0.6s 0.7s 1 forwards ease

.body-content
  opacity 0
  animation fadeInUp 0.6s 0.8s 1 forwards ease

h3
  font-weight: 400
  font-size: 1em
  line-height: 1
  display: block

h4
  font-family $alt-font-family
  font-size 1.8em
  margin-top 0

button
  display inline-block
  background none
  border none
  outline none

.img-band
  padding 1.5em 0
  max-width 1500px
  margin-left auto
  margin-right auto
  
  .contain
    width 100%
  
  img
    display block
    margin auto
  
  &--grey
    background-color #f3f3f3
  
  &--dark
    background-color #22272D
    
  &--blue
    background url('/images/blue-bg.jpg')
    background-size cover

.container
  margin auto
  max-width 800px
  
  &--large
    max-width 1250px
