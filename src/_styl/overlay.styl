.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  padding 1em
  background-color darken($overlay-bg-color, 15%)
  color white
  visibility hidden
  opacity 0
  transition transform 0.2s ease-in-out, opacity 0.2s ease-in-out, visibility 0s 0.2s ease-in-out
  
  &.is-open
    visibility visible
    opacity 1
    transition transform 0.3s ease-in-out, opacity 0.3s ease-in-out
  
  a
    color lighten($overlay-bg-color, 50%)
    text-decoration none
    transition color 0.15s ease-in-out
    border-bottom none
    
    &:hover
      color lighten($overlay-bg-color, 30%)

.overlay-wrap
  position relative
  padding 3em

.trigger-overlay
  position absolute
  top 0
  right 0
  font-size 19px

.overlay-close
  position absolute
  top 1.8em
  right 1.2em
  z-index 200
  font-size 20px
  
  +widerthan($bp-desk-start)
    top 3.5em
    right 3em

.about-info
  vert-center()
  clearfix()
