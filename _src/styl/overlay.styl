.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  padding 3em
  background-color $overlay-bg-color
  color white
  visibility hidden
  opacity 0
  transition transform 0.2s ease-in-out, opacity 0.2s ease-in-out, visibility 0s 0.2s ease-in-out
  
  &.is-open
    visibility visible
    opacity 1
    transition transform 0.3s ease-in-out, opacity 0.3s ease-in-out
  
  a
    color lighten($overlay-bg-color, 50%)
    text-decoration none
    transition color 0.15s ease-in-out
    
    &:hover
      color lighten($overlay-bg-color, 30%)

.trigger-overlay
  position absolute
  top 0
  right 0

.overlay-close
  position absolute
  top 3em
  right 3em
  z-index 200
  font-size 20px

.about-info
  vert-center()
  clearfix()
