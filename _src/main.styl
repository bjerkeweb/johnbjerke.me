// Import Vendor 
@import 'styl/vendor/normalize'

// Import partials
@import 'styl/variables'
@import 'styl/mixins'
@import 'styl/animations'
@import 'styl/globals'
@import 'styl/grid'
@import 'styl/overlay'

@import 'styl/cases'
@import 'styl/header'
@import 'styl/footer'

.avatar
  border-radius 50%
  width 80%
  margin 1em auto
  max-width 300px

.about-left
  @extend .col
  @extend .col-laptop-and-up-9
  font-size 24px
  
  p
    max-width 700px
    
    &:first-of-type
      margin-top 0

.about-right
  @extend .col
  @extend .col-laptop-and-up-3

.social
  list-reset()
  margin-top 2em
  
  .slash
    margin 0 6px
    opacity 0.3
  
  li
    display inline-block
